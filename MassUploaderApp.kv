GridLayout:
    cols: 1
    rows: 2

    ScreenManager:
        id: manager
        LoginScreen:
        MassUploaderScreen:
    TextInput:
        id: log_output
        text: "mass_uploader.txt"
        multiline: True
        readonly: True
        auto_indent: True
        size_hint_y: 0.25

<LoginScreen>:
    name: "login_screen"

    GridLayout:
        cols: 2
        rows: 3

        Label:
            text: "username:"

        TextInput:
            id: username
            multiline: False

        Label:
            text: "password:"

        TextInput:
            id: password
            multiline: False
            password: True

        Button:
            text: "Login"
            on_release:
                root.manager.get_screen("login_screen").login()


<MassUploaderScreen>:
    name: "mass_uploader_screen"

    GridLayout:
        cols: 2

        GridLayout:
            cols: 4

            Label:
                text: "manga_id:"
            ChapterTextInput:
                id: manga_id
                multiline: True

            Label:
                text: "volume:"
            ChapterTextInput:
                id: volume
                multiline: True

            Label:
                text: "chapter:"
            ChapterTextInput:
                id: chapter
                multiline: True

            Label:
                text: "title:"
            ChapterTextInput:
                id: title
                multiline: True

            Label:
                text: "language:"
            ChapterTextInput:
                id: language
                multiline: True

            Label:
                text: "group 1 id:"
            ChapterTextInput:
                id: group_1_id
                multiline: True

            Label:
                text: "group 2 id:"
            ChapterTextInput:
                id: group_2_id
                multiline: True

            Label:
                text: "group 3 id:"
            ChapterTextInput:
                id: group_3_id
                multiline: True

            Label:
                text: "group 4 id:"
            ChapterTextInput:
                id: group_4_id
                multiline: True

            Label:
                text: "group 5 id:"
            ChapterTextInput:
                id: group_5_id
                multiline: True

            Button:
                id: choose_files_button
                text: "choose files"
                on_release:
                    root.manager.get_screen("mass_uploader_screen").select_files()

            Button:
                id: mass_upload_button
                text: "upload"
                on_release:
                    root.manager.get_screen("mass_uploader_screen").mass_upload()

        TextInput:
            id: preview
            text: "preview.txt"
            multiline: True
            readonly: True
            size_hint_x: 0.25
