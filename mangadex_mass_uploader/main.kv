#:include widgets/login_screen.kv
#:include widgets/log_output.kv
#:include mass_uploader.kv
#:include mass_editor.kv
#:include mass_reactivator.kv


GridLayout:
    cols: 1
    rows: 2

    ScreenManager:
        id: manager

        LoginScreen
        AppSelectionScreen
        UploaderScreen
        EditSelectionScreen
        EditModificationScreen
        ReactivationScreen

    LogOutput


<AppSelectionScreen@Screen>:
    name: "app_selection_screen"

    GridLayout:
        cols: 2
        padding: (self.parent.width / 30, self.parent.height / 20)
        spacing: (self.parent.width / 30, self.parent.height / 20)

        Button:
            text: "Mass Uploader"
            font_size: min(self.parent.height / 25 + 15, self.parent.width / 75 + 15, 40)
            background_color: "#34A55C"
            background_normal: ""
            on_release:
                root.manager.current = "uploader_screen"
            Image:
                source: "../assets/mass_uploader.png"
                y: self.parent.y + self.parent.height / 2 + 20
                x: self.parent.x + self.parent.width / 2 - self.width / 2
                size_hint_x: None
                size_hint_y: None
                width: self.parent.width / 2 if self.parent.width / 2 > 50 else 0
                height: self.parent.height / 3 if self.parent.height / 3 > 70 else 0
        Button:
            text: "Mass Editor"
            font_size: min(self.parent.height / 25 + 15, self.parent.width / 75 + 15, 40)
            background_color: "#AFAC3B"
            background_normal: ""
            on_release:
                root.manager.current = "edit_selection_screen"
            Image:
                source: "../assets/mass_editor.png"
                y: self.parent.y + self.parent.height / 2 + 20
                x: self.parent.x + self.parent.width / 2 - self.width / 2
                size_hint_x: None
                size_hint_y: None
                width: self.parent.width / 2 if self.parent.width / 2 > 50 else 0
                height: self.parent.height / 3 if self.parent.height / 3 > 70 else 0
        Button:
            text: "Mass Reactivator"
            font_size: min(self.parent.height / 25 + 15, self.parent.width / 75 + 15, 40)
            background_color: "#409577"
            background_normal: ""
            on_release:
                root.manager.current = "reactivation_screen"
            Image:
                source: "../assets/mass_reactivator.png"
                y: self.parent.y + self.parent.height / 2 + 20
                x: self.parent.x + self.parent.width / 2 - self.width / 2
                size_hint_x: None
                size_hint_y: None
                width: self.parent.width / 2 if self.parent.width / 2 > 50 else 0
                height: self.parent.height / 3 if self.parent.height / 3 > 70 else 0
