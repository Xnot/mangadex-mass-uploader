<SavedLoginButton@Button>
    size_hint_x: None
    size_hint_y: None
    width: 300
    height: 50
    background_color: "#5c96b5ff"
    background_normal: ""

<LoginInput@TextInput>
    multiline: False
    write_tab: False
    size_hint_y: None
    height: 34

<LoginScreen>:
    name: "login_screen"

    GridLayout:
        cols: 3

        PageLayout:
        PageLayout:
        PageLayout:
        StackLayout:
            id: saved_login_container
            padding: (20, 0, 0, 0)
            spacing: 5


        AnchorLayout:
            BoxLayout:
                orientation: "vertical"
                size_hint_y: None
                size_hint_x: None
                height: 400
                width: 400
                spacing: 7

                AnchorLayout:
                    Image:
                        id: login_image
                        source: "../assets/mangadex.png"
                        size_hint_x: None
                        size_hint_y: None

                Label:
                    text: "Manga[color=FF6740]Dex[/color]"
                    bold: True
                    markup: True
                    font_size: 25
                    size_hint_y: None
                    height: 75

                LoginInput:
                    id: username
                    hint_text: "username"
                    on_text_validate:
                        root.login()

                LoginInput:
                    id: password
                    hint_text: "password"
                    password: True
                    on_text_validate:
                        root.login()

                LoginInput:
                    id: client_id
                    hint_text: "client_id"
                    on_text_validate:
                        root.login()

                LoginInput:
                    id: client_secret
                    hint_text: "client_secret"
                    password: True
                    on_text_validate:
                        root.login()

                BoxLayout:
                    padding: (0, 0, 280, 0)
                    spacing: 5

                    CheckBox:
                        id: remember_me
                        active: True

                    Label:
                        text: "remember me"

                AnchorLayout:
                    Button:
                        id: login_button
                        text: "Login"
                        size_hint_x: None
                        size_hint_y: None
                        width: 200
                        height: 50
                        on_release:
                            root.login()

        PageLayout:
        PageLayout:
        PageLayout:
        PageLayout:
